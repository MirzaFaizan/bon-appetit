<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_homepager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:background="@drawable/bg_shadow_black80">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/iv_pager_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:siRadius="4dp"
        app:siBorderAlpha="0"/>

    <ProgressBar
        android:id="@+id/loading_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_gradient_black_round" />

    <TextView
        android:id="@+id/tv_pager_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/ll_2"/>

    <LinearLayout
        android:id="@+id/ll_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_loc"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/location"/>

        <TextView
            android:id="@+id/tv_pager_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/whiteAA"
            android:ellipsize="end"/>

    </LinearLayout>



</RelativeLayout>