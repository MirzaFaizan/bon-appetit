<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView_notlog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/not_log"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_margin="10dp"
        android:background="@color/whiteAA">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/app_icon"
                    app:siRadius="100dp"
                    app:siBorderWidth="5dp"
                    app:siBorderColor="@color/bg_pro_pic"/>

            </LinearLayout>

            <!--Name-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black30"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/name"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_prof_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!--Name-->

            <!--Email-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black30"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/ll_prof_email"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/email"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_prof_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!--Email-->

            <!--Phone-->

            <View
                android:id="@+id/view_prof_phone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black30"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_prof_phone"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/phone"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_prof_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!--Phone-->

            <!--Address-->

            <View
                android:id="@+id/view_prof_address"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black30"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_prof_address"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/address"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_prof_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!--Address-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black30"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>